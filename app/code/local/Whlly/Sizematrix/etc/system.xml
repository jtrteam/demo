<?xml version="1.0"?>

<config>
	<sections>
		<sizematrix>
			<label>Size Matrix</label>
			<tab>whlly_tab</tab>
			<frontend_type>text</frontend_type>
			<sort_order>160</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<genaral translate="label" module="sizematrix">
					<label>Genaral</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable translate="label">
							<label>Enable Module</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>
						<separator translate="label">
							<label>Separate Character</label>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</separator>		
						<separator_attribute translate="label">
							<label>Separator Attribute</label>
							<frontend_type>select</frontend_type>
							<source_model>sizematrix/source_splitter</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</separator_attribute>				
					</fields>				
				</genaral>
			</groups>
		</sizematrix>
	</sections>
</config>