<?xml version="1.0"?>
<config>
    <sections>
        <clientcomputer translate="label" module="ClientComputer">
            <label>Client Computer</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <ftp_exchange_directory translate="label">
                            <label>Ftp Exchange Directory</label>
                            <frontend_model>ClientComputer/System_Config_Text_ExchangeDirectoryPath</frontend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ftp_exchange_directory>
                        <webservice_url translate="label">
                            <label>Webservice Url</label>
                            <frontend_model>ClientComputer/System_Config_Text_WebserviceUrl</frontend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Url to set in windows Magento Client Computer Program parameters</comment>
                        </webservice_url>
                        <password translate="label">
                            <label>Web password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                        </password>
                    </fields>
                </general>
            </groups>
        </clientcomputer>
    </sections>
</config>